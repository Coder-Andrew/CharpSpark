@page
@model SecurityQuestionsModel
@{
    ViewData["Title"] = "Security Questions";
}

<h1>@ViewData["Title"]</h1>
<h2>Answer your security questions</h2>
<hr />
<div class="text-danger">
    <div asp-validation-summary="All"></div>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>@Model.SecurityQuestion1</label>
                <input asp-for="Input.Answer1" class="form-control" id="Answer1" />
                <span asp-validation-for="Input.Answer1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Model.SecurityQuestion2</label>
                <input asp-for="Input.Answer2" class="form-control" id="Answer2" />
                <span asp-validation-for="Input.Answer2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Model.SecurityQuestion3</label>
                <input asp-for="Input.Answer3" class="form-control" id="Answer3" />
                <span asp-validation-for="Input.Answer3" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}