@model bool
@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/HomeIndex.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/HomeIndex.js" asp-append-version="true"></script>
}

<section>
    <div class="justify-content-center" style="position: absolute; top: 0; z-index: 1;" id="search-bar-area">
        <span><i class="fa fa-search" style="color: #e9912c;"></i> <input class="justify-content-center" type="text" id="search-profiles" placeholder="Search Profiles"
            style="height: 25px; margin-top:5px; width: 196px;" /></span>
        <div id="profile-container" style="margin-top: 0; width: 196px;">

        </div>
    </div>
<div class="text-center">
    <div class="align-items-center">
        <h1 class="title"><img src="~/Images/resuMetaLogo.png" alt="ResuMetaLogo"/>ResuMeta</h1>
    </div>
</div>
    <hr />
   
    <p class="body-paragraph">Here at CharpSpark, using modern and versatile artificially intelligent systems, we aim to please with our free
        and state of the art resume enhancement suite. 
        ResuMeta is a free software application designed to help users create strong resumes by allowing them to submit their current resume for feedback, build new resumes based on AI and industry standards, and edit them as needed. 
        It aims to simplify the resume creation process by guiding users through questions and addressing the challenge of getting resumes noticed by employers, emphasizing human review over automated filtering techniques. 
    </p>
    <p class="body-paragraph">
        To get started, create an account or log in. Next, click on "Create Resume" and answer the questions to see your resume come to life!
    </p>

@if (Model)
{
    <div class="text-center">   
        <button class="btn bg-info body-paragraph text-white border-0" id="show-hide-chat">Show/Hide Chat</button>
    </div>
    <div id="chat-body" class="body-paragraph invisible">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card bg-dark">
                        <div class="card-header bg-dark text-center">Chat</div>
                        <div class="card-body" id="chat-box" style="height: 400px; overflow-y: auto;">
                            <!-- Chat messages will go here -->
                            <div class="d-flex flex-column align-items-start mb-4">
                                <div class="bg-primary text-white rounded p-2">Hello! I am a chatbot here to answer questions about the resume creation process and about the website! Ask questions in the text box below!</div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="input-group">
                                <input type="text" id="message-input" class="form-control chatbox-align" style="flex-grow: 9; " placeholder="Type a message...">
                                <button id="send" class="btn form-control btn-primary chatbox-align" style="">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<template id="chat-template">
        <div class="d-flex flex-column mb-4">
            <div class="rounded p-2 text-white rounded p-2">test</div>
        </div>
</template>

<template id="profile-template">
    <div id="profile-box">
        <div class="d-flex flex-column mb-4" style="width: 196px; font-size: 12px; cursor: pointer; margin: 2px 2px; height: 10px;">
            <p id="profile-username" style="margin: 0 0; padding-bottom: 0;"></p>
            <p id="profile-name" style="margin: 0 0; padding-top: 0;"></p>
            <hr />
        </div>
    </div>
</template>